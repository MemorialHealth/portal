//- Extend our layout
extends layout.pug
    
block content
    .container-fluid
        .row
            .col-xs-12.col-sm-6.col-md-4.col-lg-3
                .col-header ER Wait Times
                
                #ERTimesChart(canvasBgAlpha="0", legendBgAlpha="0", style="height: 265px;;")
                    table.heatmapTable(style="height:90%;")
                            tr
                                each val in ['', '6A-8A', '9A-11A', '12P-2P', '3P-5P', '6P-8P', '9p-11p']
                                    th= val
                            tr
                                th MMH
                                each val in ['10', '15','12','19','25', '40']
                                    td= val
                                
                            tr
                                th Selby
                                each val in ['8','12','10','8','35','15']
                                    td= val
                            tr
                                th Belpre
                                each val in ['12','30','20','25','22','12']
                                    td= val
                            tr
                                th PC-Mar
                                each val in ['','9','13','28','15','']
                                    td= val
                            tr
                                th PC-Bel
                                each val in ['','5','28','35','20','']
                                    td= val
                        
                    #heatmapSlider.m-t-30

                    #heatmapValues.
                        Showing times between <div id="lowerValue" class="heatmapValue"></div> and <div id="upperValue" class="heatmapValue"></div> minutes

            .col-xs-12.col-sm-6.col-md-4.col-lg-3
                .col-header AP Days

                #APDaysChart(style="height:300px; text-align:center;")
            .col-xs-12.col-sm-6.col-md-4.col-lg-3
                .col-header Counties

                #ohioMap(style="height:300px; text-align:center;")
            .col-xs-12.col-sm-6.col-md-4.col-lg-3
                .col-header 340B

                #revenueChart(style="height:300px; text-align:center;")
        br
        br
        br
        .row
            .col-xs-12.col-sm-6
                ul.list-unstyled.list-inline(style="text-indent: 5px;")
                    li.text-center
                        i.material-icons widgets
                        p All
                    li.text-center
                        i.material-icons history
                        p Recent
                    li.text-center
                        i.material-icons search
                        p Search

                each icon in ['calendar', 'excel', 'news', 'onedrive', 'onenote', 'outlook', 'people', 'powerpoint', 'sites', 'tasks', 'word']
                    div.icon-list(data-attr=icon)
                        img(src="media/icons/" + icon + ".png")

                each icon in ["word", "tasks", "sites", "powerpoint", "people", "outlook", "onenote", "onedrive", "news", "excel", "calendar"]
                    div.icon-list(data-attr=icon)
                        img(src="media/icons/" + icon + ".png")

block scripts
    script(src="js/landing.js")
        